<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<EditText
		android:id="@+id/blackedit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="black list"
		/>
	<Button
		android:id="@+id/blackbtn"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="add black"
		>
	</Button>
	<TextView 
	    android:id="@+id/type_surportted"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/type_surportted" 
		android:layout_marginLeft="5dip"
		android:textSize="15sp"
		android:textColor="@color/black"/>
	
	<Spinner 
	    android:id="@+id/type_select"
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:layout_marginTop="5dip">
	</Spinner>
	

	<ListView 
	    android:id="@+id/cmp_listview" 
	    android:layout_marginTop="5dip"
	    android:layout_width="fill_parent"  
	    android:layout_height="300dip" >
    </ListView> 
 
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="40dip"
	    android:layout_marginTop="10dip" >
	    
	   	<Button 
		    android:id="@+id/fuzz_all_null"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignParentLeft="true"
			android:text="@string/fuzz_all_null" 
			android:visibility="gone">
		</Button>
		<Button 
		    android:id="@+id/fuzz_all_se"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignParentRight="true"
			android:layout_toRightOf="@id/fuzz_all_null"
			android:text="@string/fuzz_all_se"
			android:visibility="gone">
		</Button>
	</RelativeLayout>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="black list:"
		android:layout_marginLeft="5dip"
		android:textSize="15sp"
		android:textColor="@color/black"/>
	<ListView
		android:id="@+id/black_listview"
		android:layout_marginTop="5dip"
		android:layout_width="fill_parent"
		android:layout_height="100dip" >
	</ListView>

</LinearLayout>
